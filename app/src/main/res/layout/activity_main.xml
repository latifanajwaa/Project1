<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView

        android:layout_width="wrap_content"
        android:text="Tipe Kendaraan [Mobil/Motor]:"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etTipeK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/btSavetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Type"
        android:layout_marginLeft="250dp"
        />
    <TextView

        android:layout_width="wrap_content"
        android:text="Brand [Character >= 5]:"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />
    <TextView

        android:layout_width="wrap_content"
        android:text="Name [Character >= 5]:"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />
    <TextView

        android:layout_width="wrap_content"
        android:text="License :"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etLicense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <TextView

        android:layout_width="wrap_content"
        android:text="Top Speed:"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etTSpeed"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        />

    <TextView

        android:layout_width="wrap_content"
        android:text="Gas Capacity:"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/etTSpeed"
        android:layout_marginLeft="40dp"
        />

    <EditText
        android:id="@+id/etGCapacity"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/etTSpeed"
        android:layout_marginLeft="40dp"
        />

        <TextView

            android:layout_width="wrap_content"
            android:text="Wheel:"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/etGCapacity"
            android:layout_marginLeft="40dp"
            />

        <EditText
            android:id="@+id/etWheel"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/etGCapacity"
            android:layout_marginLeft="40dp"
            />
    </RelativeLayout>

    <TextView

        android:layout_width="wrap_content"
        android:text="Type [SUV/Supercar/Minivan]:"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etTipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />
    <TextView

        android:layout_width="wrap_content"
        android:text="Entertainment System amount:"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etESystem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/btSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT" />
            <TextView
                android:id="@+id/Vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle"
                />
     <Button
         android:id="@+id/btTest"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Test drive"/>
         <TextView
             android:id="@+id/list"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="List"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>